public class Recursive
{

        public static void main(String[] args) {
            int number = 1234;
            displayDigitsInReverseOrder(number);
        }

        public static void displayDigitsInReverseOrder(int n) {
            if (n < 10) {
                
                System.out.print(n + " ");
            } else {
                
                System.out.print(n % 10 + " ");
                displayDigitsInReverseOrder(n / 10);
            }
        }
    }

